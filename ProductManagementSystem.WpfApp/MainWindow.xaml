<Window x:Class="ProductManagementSystem.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления товарами - WPF" Height="720" Width="1280" MinHeight="720" MinWidth="1280"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска и фильтрации -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск по ID:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="TextBoxFindId" Width="80" Margin="0,0,10,0"/>
            <Button x:Name="ButtonFind" Click="ButtonFind_Click" Content="Найти" Width="80" Margin="0,0,10,0"/>
            <Button x:Name="ButtonRefresh" Click="ButtonRefresh_Click" Content="Обновить" Width="100" Margin="0,0,10,0"/>
            <TextBlock Text="Фильтр по категории:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="ComboBoxCategory" Width="180" Margin="0,0,10,0"/>
            <Button x:Name="ButtonFilter" Click="ButtonFilter_Click" Content="Применить фильтр" Width="120"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица товаров -->
            <DataGrid x:Name="DataGridProducts" Grid.Column="0" AutoGenerateColumns="True" IsReadOnly="True" Margin="0,0,15,0"/>

            <!-- Панель управления -->
            <StackPanel Grid.Column="1">
                <!-- Добавление товара -->
                <GroupBox Header="Добавить товар" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="ID:" />
                        <ComboBox x:Name="ComboBoxId" IsEditable="True" Margin="0,0,0,8">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        
                        <TextBlock Text="Название:" />
                        <TextBox x:Name="TextBoxName" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Описание:" />
                        <TextBox x:Name="TextBoxDescription" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Категория:" />
                        <ComboBox x:Name="ComboBoxAddCategory" IsEditable="True" Margin="0,0,0,8">
                            <ComboBoxItem Content="Электроника"/>
                            <ComboBoxItem Content="Периферия"/>
                            <ComboBoxItem Content="Аудио"/>
                            <ComboBoxItem Content="Комплектующие"/>
                            <ComboBoxItem Content="Аксессуары"/>
                            <ComboBoxItem Content="Разное"/>
                        </ComboBox>
                        
                        <TextBlock Text="Цена (руб.):" />
                        <ComboBox x:Name="ComboBoxPrice" IsEditable="True" Margin="0,0,0,8">
                            <ComboBoxItem Content="500"/>
                            <ComboBoxItem Content="1000"/>
                            <ComboBoxItem Content="1500"/>
                            <ComboBoxItem Content="2000"/>
                            <ComboBoxItem Content="5000"/>
                            <ComboBoxItem Content="10000"/>
                            <ComboBoxItem Content="15000"/>
                            <ComboBoxItem Content="25000"/>
                            <ComboBoxItem Content="50000"/>
                            <ComboBoxItem Content="75000"/>
                            <ComboBoxItem Content="100000"/>
                        </ComboBox>
                        
                        <TextBlock Text="Количество (шт.):" />
                        <ComboBox x:Name="ComboBoxQuantity" IsEditable="True" Margin="0,0,0,8">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="15"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                        
                        <Button x:Name="ButtonAdd" Click="ButtonAdd_Click" Content="Добавить товар" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Редактирование товара -->
                <GroupBox Header="Редактировать товар" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock x:Name="TextBlockEditId" Text="ID: Не выбран" />
                        
                        <TextBlock Text="Название:" />
                        <TextBox x:Name="TextBoxEditName" Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Описание:" />
                        <TextBox x:Name="TextBoxEditDescription" Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Категория:" />
                        <ComboBox x:Name="ComboBoxEditCategory" IsEditable="True" Margin="0,0,0,5">
                            <ComboBoxItem Content="Электроника"/>
                            <ComboBoxItem Content="Периферия"/>
                            <ComboBoxItem Content="Аудио"/>
                            <ComboBoxItem Content="Комплектующие"/>
                            <ComboBoxItem Content="Аксессуары"/>
                            <ComboBoxItem Content="Разное"/>
                        </ComboBox>
                        
                        <TextBlock Text="Цена (руб.):" />
                        <ComboBox x:Name="ComboBoxEditPrice" IsEditable="True" Margin="0,0,0,5">
                            <ComboBoxItem Content="500"/>
                            <ComboBoxItem Content="1000"/>
                            <ComboBoxItem Content="1500"/>
                            <ComboBoxItem Content="2000"/>
                            <ComboBoxItem Content="5000"/>
                            <ComboBoxItem Content="10000"/>
                            <ComboBoxItem Content="15000"/>
                            <ComboBoxItem Content="25000"/>
                            <ComboBoxItem Content="50000"/>
                            <ComboBoxItem Content="75000"/>
                            <ComboBoxItem Content="100000"/>
                        </ComboBox>
                        
                        <TextBlock Text="Количество (шт.):" />
                        <ComboBox x:Name="ComboBoxEditQuantity" IsEditable="True" Margin="0,0,0,5">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="15"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                        
                        <Button x:Name="ButtonSave" Click="ButtonSave_Click" Content="Сохранить изменения" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Действия -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                    <Button x:Name="ButtonDelete" Click="ButtonDelete_Click" Content="Удалить" Width="100" Margin="0,0,10,0"/>
                    <Button x:Name="ButtonDeleteByQuantity" Click="ButtonDeleteByQuantity_Click" Content="Удалить товар" Width="100" Margin="0,0,10,0"/>
                    <Button x:Name="ButtonTotal" Click="ButtonTotal_Click" Content="Общая стоимость" Width="140"/>
                </StackPanel>

                <TextBlock x:Name="TextBlockTotal" Margin="0,5,0,0" Text="Общая стоимость: Не рассчитана" 
                           FontWeight="Bold" Foreground="DarkBlue"/>
            </StackPanel>
        </Grid>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово к работе" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
