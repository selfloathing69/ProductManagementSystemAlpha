<local:BaseView x:Class="ProductManagementSystem.WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:ProductManagementSystem.WpfApp.Converters"
        xmlns:local="clr-namespace:ProductManagementSystem.WpfApp.Views"
        mc:Ignorable="d"
        Title="Система управления товарами" 
        Height="700" 
        Width="1200"
        MinHeight="600" 
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <local:BaseView.Resources>
        <!-- Конвертер для форматирования валюты в рубли -->
        <converters:RubleCurrencyConverter x:Key="RubleCurrencyConverter"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004578"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- КНопка удаления -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#8B0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
        </Style>
    </local:BaseView.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#007ACC" Padding="15" CornerRadius="4" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Система управления товарами" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Форма управления товарами" 
                           FontSize="12" 
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- центор  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- панелька слева - Product List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- фильтр и упр -->
                <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="4" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Фильтрация и управление" 
                                   Style="{StaticResource HeaderTextStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Категория:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       FontSize="14"/>
                            
                            <ComboBox Grid.Column="1"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      ItemsSource="{Binding Categories}"
                                      SelectedItem="{Binding SelectedCategory}"
                                      Margin="0,0,10,0"/>
                            
                            <Button Grid.Column="2"
                                    Content="Применить фильтр"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Command="{Binding ApplyFilterCommand}"
                                    Width="190"/>
                        </Grid>
                        <!-- bidning Здесь!! -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Обновить" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Command="{Binding RefreshCommand}"
                                    Width="120"
                                    Margin="0,0,10,0"/>
                            
                            <Button Content="Удалить" 
                                    Style="{StaticResource DangerButtonStyle}"
                                    Command="{Binding DeleteProductCommand}"
                                    Width="120"
                                    Margin="0,0,10,0"/>
                            
                            <Button Content="Общая стоимость" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Command="{Binding CalculateTotalCommand}"
                                    Width="160"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Products DataGrid -->
                <DataGrid Grid.Row="1"
                          Style="{StaticResource ModernDataGridStyle}"
                          ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct, Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="150"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" MinWidth="200"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=N2}" Width="100"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding StockQuantity}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- общ стоимость (разделен на общую стоимость и стоимость выбранного товара) -->
                <Border Grid.Row="2" Background="White" Padding="15" CornerRadius="4" Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Общая стоимость склада -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Общая стоимость склада:" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalInventoryValue, Converter={StaticResource RubleCurrencyConverter}}" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#007ACC"/>
                        </StackPanel>

                        <!-- Вертикальный разделитель -->
                        <Border Grid.Column="1" Background="#CCCCCC" Width="2" Margin="10,0"/>

                        <!-- Стоимость выбранного товара -->
                        <StackPanel Grid.Column="2">
                            <TextBlock FontSize="14" Margin="0,0,0,5">
                                <Run Text="Сумма выбранного товара ID "/>
                                <Run Text="{Binding SelectedProduct.Id, FallbackValue='-'}" FontWeight="Bold"/>
                            </TextBlock>
                            <TextBlock Text="{Binding SelectedProductValue, Converter={StaticResource RubleCurrencyConverter}}" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#007ACC"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- панель справа - добавить\редактировать форму -->
            <Border Grid.Column="2" Background="White" Padding="15" CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Добавление / Редактирование товара" 
                                   Style="{StaticResource HeaderTextStyle}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <!-- ID биндинг -->
                        <TextBlock Text="ID товара:" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                 Text="{Binding ProductId, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Margin="0,0,0,15"/>

                        <!-- название -->
                        <TextBlock Text="Название:" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                 Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,15"/>

                        <!-- опис  -->
                        <TextBlock Text="Описание:" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                 Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 MinHeight="60"
                                 AcceptsReturn="True"
                                 Margin="0,0,0,15"/>

                        <!-- катег  -->
                        <TextBlock Text="Категория:" Margin="0,0,0,5"/>
                        <ComboBox Style="{StaticResource ModernComboBoxStyle}"
                                  IsEditable="True"
                                  Text="{Binding ProductCategory, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Электроника"/>
                            <ComboBoxItem Content="Периферия"/>
                            <ComboBoxItem Content="Аудио"/>
                            <ComboBoxItem Content="Комплектующие"/>
                            <ComboBoxItem Content="Аксессуары"/>
                            <ComboBoxItem Content="Разное"/>
                        </ComboBox>

                        <!-- цена -->
                        <TextBlock Text="Цена (руб.):" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                 Text="{Binding ProductPrice, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Margin="0,0,0,15"/>

                        <!-- колво -->
                        <TextBlock Text="Количество (шт.):" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                 Text="{Binding ProductStockQuantity, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Margin="0,0,0,20"/>

                        <!-- книпки -->
                        <Button Content="Добавить товар" 
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding AddProductCommand}"
                                Margin="0,0,0,10"
                                Height="40"/>
                        
                        <Button Content="Сохранить изменения" 
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding UpdateProductCommand}"
                                Margin="0,0,0,10"
                                Height="40"/>
                        
                        <Button Content="Очистить форму" 
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding ClearFormCommand}"
                                Height="40"
                                Background="#174979 "/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- (синяя полоска внизу показывает текущий статус операций и результаты) -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10" CornerRadius="4" Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="White"
                       FontSize="12"/>
        </Border>
    </Grid>
</local:BaseView>

